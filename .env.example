POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=hydra
POSTGRES_PASSWORD=your_password
POSTGRES_DB=hydra_db

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

SQLITE_PATH=./data/hydra.db
CHROMA_PATH=./data/chroma

OLLAMA_HOST=http://localhost:11434

# ==============================================================================
# SOLLOL Configuration (Distributed Ollama Management)
# ==============================================================================
# SOLLOL provides automatic node discovery and intelligent routing.
# These settings control SOLLOL's behavior.

# Enable automatic discovery of Ollama nodes on the network
SOLLOL_DISCOVERY_ENABLED=true

# Discovery timeout in seconds (how long to wait for node responses)
SOLLOL_DISCOVERY_TIMEOUT=10

# Health check interval in seconds (how often to check node health)
SOLLOL_HEALTH_CHECK_INTERVAL=120

# Enable GPU VRAM monitoring for resource-aware routing
SOLLOL_VRAM_MONITORING=true

# Enable SOLLOL Unified Dashboard for observability
SOLLOL_DASHBOARD_ENABLED=true

# Dashboard port (accessible at http://localhost:DASHBOARD_PORT)
SOLLOL_DASHBOARD_PORT=8080

# SOLLOL logging level (DEBUG, INFO, WARNING, ERROR)
SOLLOL_LOG_LEVEL=INFO

# ==============================================================================
# Legacy Node Configuration (DEPRECATED - No longer needed with SOLLOL)
# ==============================================================================
# These are kept for backward compatibility but are not used when SOLLOL is enabled.
# SOLLOL automatically discovers nodes - no manual configuration required!
# GPU_NODE_HOST=localhost
# CPU_NODE_1_HOST=192.168.1.100
# CPU_NODE_2_HOST=192.168.1.101
# CPU_NODE_3_HOST=192.168.1.102

# ==============================================================================
# Model Configuration (Override models.yaml with environment variables)
# ==============================================================================
# These environment variables allow you to override the default models defined
# in config/models.yaml without modifying the YAML file.

# Light model for quick analysis and orchestration
HYDRA_LIGHT_MODEL=qwen3:1.7b

# Heavy model for complex tasks
HYDRA_HEAVY_MODEL=qwen3:14b

# Primary code synthesis models (comma-separated, tried in order)
HYDRA_CODE_MODELS=qwen2.5-coder:14b,deepseek-coder:latest,codellama:13b,qwen2.5-coder:7b,deepseek-coder:6.7b,codellama:7b

# Specialized models
HYDRA_MATH_MODEL=wizard-math:latest
HYDRA_REASONING_MODEL=qwq:32b

# General-purpose models (comma-separated)
HYDRA_GENERAL_MODELS=llama3.1:latest,tulu3:latest,llama3:latest

# Embedding model
HYDRA_EMBEDDING_MODEL=mxbai-embed-large

# JSON function calling model
HYDRA_JSON_MODEL=llama3.2:latest

# Model generation parameters
HYDRA_DEFAULT_TEMPERATURE=0.7
HYDRA_DEFAULT_TOP_P=0.95
HYDRA_DEFAULT_REPEAT_PENALTY=1.1
HYDRA_DEFAULT_MAX_TOKENS=8192

# Logging
LOG_LEVEL=INFO